.round-btn{
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  outline: 0;
  line-height: 1em;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  box-shadow: 0 0 3px rgba(153, 153, 102,.5);
}
.btn-green{
  background-color: #FFB6C1;
}
.btn-blue{
  background-color: #87CEFA;
}
.round-btn.active{
  opacity: .7;
}
.fixed{
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 100rpx;
  font-size: 12px;
}

.top{
  width: 100%;
  padding-bottom: 100rpx;
  border-bottom: 1px solid #f5f5f0;
}
.bottom{
  padding: 30rpx 0;
  display: flex;
  width: 100%;
}
.bottom text{
  display: inline-block;
  flex-grow: 1;
  text-align: center;
  font-size: 30rpx;
}
.text-blue{
  color: #99bbff;
}
.text-pink{
  color: #ffcccc;
}
.text-green{
  color: #b3ffb3;
}
.text-yellow{
  color: #e5e600;
}
.text-orange{
  color: #ffcc80;
}
.text-grey{
  color: #ccccb3;
}
.text-red{
  color: #ff5c33;
}
.text-caolv{
  color: #ccff99;
}
